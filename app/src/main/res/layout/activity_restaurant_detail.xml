<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_restaurant_detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="az.com.restaurant.activities.RestaurantDetailActivity">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/head_image"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        fresco:placeholderImage="@drawable/default_header"
        android:scaleType="fitXY"/>

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/cover_image"
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="35dp"/>

    <TextView
        android:id="@+id/rest_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/head_image"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/deliver_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rest_name"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/map_link"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/deliver_price"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:textColor="#004499"
        android:text="Map it"
        android:textSize="18sp"/>



</RelativeLayout>
